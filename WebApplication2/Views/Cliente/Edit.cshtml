@model WebApplication2.Models.Cliente

<h2>Editar Producto</h2>

<form method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Precio">Apellido</label>
        <input type="number" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required />
    </div>

    <div class="form-group">
        <label for="Precio">correo</label>
        <input type="number" class="form-control" id="correo" name="correo" value="@Model.correo" required />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>
