@model WebApplication2.Models.Cliente

<h2>Elimnar Cliente</h2>

<form method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Precio">Apellido</label>
        <input type="text" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required />
    </div>

    <div class="form-group">
        <label for="Precio">correo</label>
        <input type="text" class="form-control" id="correo" name="correo" value="@Model.correo" required />
    </div>
    <div class="form-group">
        <label for="Mensaje">Esta seguro que desea eliminar estos datos</label>
        <a href="/Producto/Index"> Regresar</a>
    </div>

    <button type="submit" class="btn btn-primary">Eliminar</button>
</form>
