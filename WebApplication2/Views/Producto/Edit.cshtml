@model WebApplication2.Models.Producto

<h2>Editar Producto</h2>

<form method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Precio">Precio</label>
        <input type="number" class="form-control" id="Precio" name="Precio" value="@Model.Precio" required />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>